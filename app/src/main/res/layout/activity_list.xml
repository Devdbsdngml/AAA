<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="6dp"
    android:background="#ffffff"
    tools:context=".ListActivity">

    <ImageView
        android:id="@+id/secLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하시는 목록을 선택해주세요"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/secLogo"/>

    <RelativeLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_below="@id/tv"
        android:layout_above="@id/blank">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/forest"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/forest"
                />


            <ImageButton
                android:id="@+id/cloud"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/cloud"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@+id/ll1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"

                android:paddingStart="6dp"
                android:paddingLeft="6dp"
                android:paddingEnd="1dp"
                android:paddingRight="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playlist 1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forest"
                    android:textColor="#000000"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"

                android:paddingStart="6dp"
                android:paddingLeft="6dp"
                android:paddingEnd="1dp"
                android:paddingRight="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playlist 2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloud"
                    android:textColor="#000000"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2">

            <ImageButton
                android:id="@+id/ocean"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/ocean"
                />


            <ImageButton
                android:id="@+id/business"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/business"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@+id/ll3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"

                android:paddingStart="6dp"
                android:paddingLeft="6dp"
                android:paddingEnd="1dp"
                android:paddingRight="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playlist 3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocean"
                    android:textColor="#000000"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"

                android:paddingStart="6dp"
                android:paddingLeft="6dp"
                android:paddingEnd="1dp"
                android:paddingRight="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playlist 4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    android:textColor="#000000"/>


            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

    <ImageView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="6dp"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>